# Event window widget to show Struggle resources
# Required controller: struggle_info

vbox = {
	name = "event_window_widget_RICE_north_atlantic_struggle_resources_info"
	layoutpolicy_horizontal = expanding
	allow_outside = yes
	margin = { 10 5 }

	background = {
		using = Background_Area_With_Header
	}

	hbox = {
		layoutpolicy_horizontal = expanding

		text_label_center = {
			layoutpolicy_horizontal = expanding
			align = center
			text = "RICE_greenland_capacity_pressure_title"
			max_width = 480
			default_format = "#P"
			minimumsize = { 0 25 }
		}
	}

	vbox = {
		name = "event_start_widget"
		#visible = "[EventWindowCustomWidgetStruggleInfo.IsStartEvent]"
		layoutpolicy_horizontal = expanding
		layoutpolicy_vertical = expanding
		spacing = 10

		vbox = {
			layoutpolicy_horizontal = expanding
			using = RICE_greenland_resource_effect
		}
	}

}

template RICE_greenland_resource_effect {
	vbox = {
		layoutpolicy_horizontal = expanding
		spacing = 12
		margin_bottom = 5

		# background = {
		# 	using = Background_Area_With_Header
		# 	margin_left = 16
		# 	margin_right = 16
		# }

		text_single = {
			max_width = 480
			margin = { 0 5 }
			text = "STRUGGLE_TOOLTIP_EFFECTS_HEADER"
		}

		hbox = {
			name = "phase_effects"
			layoutpolicy_vertical = expanding
			spacing = 15

			GreenlandResourceResilience = {}

			GreenlandResourceNetworks = {}

			GreenlandResourceSocioEconomicPressures = {}

			GreenlandResourceEnvironmentalPressures = {}
		}
	}
}

